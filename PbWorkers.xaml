        <TransformGroup>
            <ScaleTransform ScaleX="1" ScaleY="1"/>
            <SkewTransform AngleX="0" AngleY="0"/>
            <RotateTransform Angle="270" />
            <TranslateTransform x:Name="UserControlToolTipXY" X="0" Y="0"/>
